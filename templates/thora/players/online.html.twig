{% extends "base.html.twig" %}

{% block content %}
        <table border="0" cellspacing="1" cellpadding="4" width="100%">
            <tbody>
            <tr bgcolor="gray">
                <td class="white"><b>Server Status</b></td>
            </tr>
            <tr bgcolor="white">
                <td>
                    <table border="0" cellspacing="1" cellpadding="1">
                        <tbody>
                        <tr>
                            <td>Currently {{ onlines|length }} players are online on <b>{{ otsName }}</b>.</td>
                        </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
            </tbody>
        </table>
        <div style="text-align: center;">&nbsp;</div>
        <table border="0" cellspacing="1" cellpadding="4" width="100%">
            <tbody>
            <tr bgcolor="gray">
                <td><a href="?subtopic=whoisonline&amp;order=name" class="white">Name</a></td>
                <td><a href="?subtopic=whoisonline&amp;order=level" class="white">Level</a></td>
                <td><a href="?subtopic=whoisonline&amp;order=vocation" class="white">Vocation</a></td>
            </tr>
            {% for online in onlines %}
                <tr bgcolor="white">
                    <td width="65%"><a href="/player/{{ online.name }}">{{ online.name }}</a></td>
                    <td width="10%">8</td>
                    <td width="20%">Goku</td>
                </tr>
            {% endfor %}

            </tbody>
        </table><br>
            <table width="100%" border="0" cellspacing="1" cellpadding="4">
                <tbody>
                <tr>
                    <td bgcolor="gray" class="white"><b>Search Character</b></td>
                </tr>
                <tr>
                    <td bgcolor="white">
                        <table border="0" cellpadding="1">
                            <tbody>
                            <tr>
                                <td>Name:</td>
                                <td><input id="szukatorr" name="name" value="" size="29" maxlength="29"
                                           onkeypress="(function(e,t){if (e.keyCode == 13 && t.value.length > 0) window.location.replace(('/player/' + t.value)) })(event,this)">
                                </td>
                                <td><input type="submit" class="btn btn-default btn-sm" value="Search" name="Submit"
                                           onclick="(function(){var szukator = document.querySelector('#szukatorr'); if(szukator.value.length > 0) window.location.replace(('/player/' + szukator.value)) })()">
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
                </tbody>
            </table>
{% endblock %}